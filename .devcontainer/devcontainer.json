{
  "name": "MediaTracker - Flutter",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "bash .devcontainer/setup-flutter.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode.gitlens",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "Flutter Web Preview", "requireLocalPort": false }
  }
}
